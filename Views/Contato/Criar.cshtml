@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Criar novo contato";
}

<h1>Criar novo contato</h1>

<hr />

<div class="row">
    <div class="md-col-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label">Ativo</label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>